{
  "name": "learning-platform-cdk",
  "version": "0.1.0",
  "bin": {
    "learning-platform-cdk": "bin/learning-platform-cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "cdk:diff": "cdk diff",
    "cdk:deploy": "cdk deploy",
    "cdk:destroy": "cdk destroy",
    "cdk:synth": "cdk synth",
    "cdk:deploy:ci": "npm run cdk:deploy -- --all --require-approval never -c env=dev",
    "cdk:diff:ci": "npm run cdk:diff -- --all -c env=dev",
    "cdk:destroy:ci": "npm run cdk:destroy -- --all -c env=dev",
    "cdk:synth:ci": "npm run cdk:synth -- --all --quiet -c env=dev",
    "cdk:diff:dev": "npm run cdk:diff -- --profile cdk-deploy-dev -c env=dev --all",
    "cdk:deploy:dev": "npm run cdk:deploy -- --profile cdk-deploy-dev --all --require-approval never -c env=dev",
    "cdk:destroy:dev": "npm run cdk:destroy -- --profile cdk-deploy-dev --all -c env=dev",
    "cdk:synth:dev": "npm run cdk:synth -- --profile cdk-deploy-dev --all -c env=dev",
    "lint": "eslint . --ext .ts,.js",
    "watch": "tsc -w",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "node --max-old-space-size=4096 node_modules/.bin/jest",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/aws-lambda": "^8.10.149",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "aws-cdk": "2.1007.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.30.1"
  },
  "dependencies": {
    "@aws-cdk/aws-ec2": "^1.203.0",
    "@aws-cdk/aws-iam": "^1.203.0",
    "@aws-cdk/aws-lambda": "^1.203.0",
    "@aws-cdk/aws-rds": "^1.203.0",
    "@aws-cdk/aws-s3": "^1.203.0",
    "aws-cdk-lib": "^2.186.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "^10.4.2"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json,css,md}": "prettier --write"
  }
}
